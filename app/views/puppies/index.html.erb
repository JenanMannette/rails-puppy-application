<p id="notice"><%= notice %></p>

<h1>Local Puppy Rescue</h1>
<h6>Welcome to the local puppy rescue! Save a puppy today!</h6>
<button><%= link_to 'Learn More!' %></button>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @puppies.each do |puppy| %>
      <tr>
        <td><%= puppy.name %></td>
        <td><%= puppy.bio %></td>
        <td><%= puppy.age %></td>
        <td><%= puppy.breed %></td>
        <td>
            <%= link_to puppy do %>
                <img src="<%= puppy.image_url %>" alt="puppy pic">
            <% end %>
        </td>
        <td><%= link_to puppy.name, puppy %></td>
        <td><%= link_to 'Adopt', puppy, method: :delete, data: { confirm: 'Are you sure you want to adopt ' + puppy.name + '?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new puppy', new_puppy_path %>
